{
  "name": "ssh-tunnel-manager",
  "version": "0.1.19",
  "description": "Desktop SSH tunnel manager built with Electron and TypeScript",
  "main": "dist/main/main.js",
  "packageManager": "pnpm@9.1.2",
  "scripts": {
    "clean": "node -e \"require('fs').rmSync('dist',{recursive:true,force:true})\"",
    "build": "pnpm run clean && pnpm run build:main && pnpm run build:renderer && pnpm run copy:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "tsc -p tsconfig.renderer.json",
    "copy:renderer": "node -e \"const fs=require('fs');fs.mkdirSync('dist/renderer',{recursive:true});fs.copyFileSync('src/renderer/index.html','dist/renderer/index.html');fs.copyFileSync('src/renderer/styles.css','dist/renderer/styles.css');\"",
    "start": "pnpm run build && electron .",
    "dev": "pnpm run build && electron .",
    "package:mac": "pnpm run build && electron-builder --mac dmg --publish never",
    "package:win": "pnpm run build && electron-builder --win nsis --publish never",
    "package:linux": "pnpm run build && electron-builder --linux AppImage --x64 --publish never"
  },
  "keywords": [
    "electron",
    "ssh",
    "tunnel",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "productName": "SSH Tunnel Manager",
  "build": {
    "appId": "com.wuchong.sshtunnelmanager",
    "productName": "SSH Tunnel Manager",
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "assets",
      "category": "Development",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "electron": "^33.2.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "asn1": "^0.2.6",
    "bcrypt-pbkdf": "^1.0.2",
    "ssh2": "^1.15.0"
  }
}
